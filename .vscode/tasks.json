{
    "version": "0.1.0",
    "command": "cmd",
    "isShellCommand": true,
    "args": ["/c"],
    "showOutput": "always",
    "tasks": [
        {
            "taskName": "ComplieRun",
            "suppressTaskName": true,
            "args": ["g++", "main.cpp", "&&", "a.exe", "<in.txt"],
            "isBuildCommand": true,
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": ["relative", "${workspaceRoot}"],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        },

        {
            "taskName": "Complie-g",
            "suppressTaskName": true,
            "args": ["g++", "main.cpp", "-g"],
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": ["relative", "${workspaceRoot}"],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        },
        
        {
            "taskName": "Run",
            "suppressTaskName": true,
            "args": ["main.exe", "<in.txt"],
            "isTestCommand": true
        }
    ]
}